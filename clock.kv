<ClockUI>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bg.png"
    orientation: 'vertical'
    padding: 50
    spacing:10
    Label:
        id:date
        font_name:"DIGITALDREAM.ttf"
        font_size:25
        color:(75/255,245/255,233/255)
        
    Label:
        id:weekday
        font_name:"DIGITALDREAMFAT.ttf"
        font_size:25
        color:(75/255,245/255,233/255)
    Label:
        id:time
        font_name:"DIGITALDREAMFAT.ttf"
        font_size:25
        color:(75/255,245/255,233/255)
